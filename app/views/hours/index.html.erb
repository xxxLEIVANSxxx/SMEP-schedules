<h1 class="header">Hours</h1>

<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <% @arenas.each do |arena| %>    
                <li class="tab"><a href="#arena_<%= arena.id %>"><%= arena.name %></a></li>    
            <% end %>
        </ul>
    </div>
    <% @arenas.each do |arena| %>
        <p></p>
        <div id="arena_<%= arena.id %>" class="col s12">
          <%= sync partial: 'arena-admin', resource: arena %>            
        </div
    <% end %>
</div>
