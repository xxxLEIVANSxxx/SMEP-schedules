<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="top-nav">
        <div class="container">
          <div class="nav-wrapper">
            <div class="col s12 m10 offset-m1">
              <div class="center-align">
                <%= image_tag("logo.jpg", size: "350x200") %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
    <%= yield %>
    <% if devise_error_messages? || alert || (devise_mapping.confirmable? && resource.pending_reconfirmation?) %>
      <script  type="text/javascript">
        <% if devise_error_messages? %>
          M.toast({html: "Fill out the form correctly"});
        <% end %>
        <% if alert %>
          M.toast({html: "<%= alert %>"});
        <% end %>
        <% if (devise_mapping.confirmable? && resource.pending_reconfirmation?) %>
            M.toast({html: "Currently waiting confirmation for: <%= resource.unconfirmed_email %>"});
        <% end %>
      </script>
    <% end %>
  </body>
</html>
