<h1 class="header">Arenas</h1>

<table class="highlight">
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>Neighborhood</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arenas.each do |arena| %>
      <tr>
        <td><%= arena.name %></td>
        <td><%= arena.street %></td>
        <td><%= arena.neighborhood %></td>
        <td><%= arena.number %></td>
        <td><%= link_to 'Show', arena %></td>
        <td><%= link_to 'Edit', edit_arena_path(arena) %></td>
        <td><%= link_to 'Destroy', arena, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Arena', new_arena_path %>
