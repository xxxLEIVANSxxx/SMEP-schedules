<%= form_with(model: arena, local: true) do |form| %>
  <div class="input-field col s12">
    <i class="material-icons prefix">golf_course</i>
    <%= form.label :name %>
    <%= form.text_field :name, :class => (arena.errors[:name].count != 0 ? "validate invalid" : "") %>
    <% arena.errors[:name].each do |message| %>
      <span class="helper-text" data-error="Name <%= message %>"></span>
    <% end %>
  </div>

  <div class="input-field col s12">
    <i class="material-icons prefix">map</i>
    <%= form.text_field :address, :class => (arena.errors[:address].count != 0 ? "validate invalid" : "")  %>
    <%= form.label :address %>
    <% arena.errors[:address].each do |message| %>
      <span class="helper-text" data-error="Address <%= message %>"></span>
    <% end %>
  </div>

  <%= form.submit 'Submit', class: "btn-flat teal lighten-5" %>
<% end %>
