<h1 class="header">Users</h1>

<table class="highlight">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>CPF</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.cpf %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => "btn-flat blue lighten-5" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn-flat deep-orange accent-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>